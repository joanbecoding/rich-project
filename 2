    <script>
        // Animation for code particles
        document.addEventListener('DOMContentLoaded', function() {
            const codeParticles = document.getElementById('codeParticles');
            const codeSnippets = ['<div>', '</div>', 'function()', '{...}', 'AI.train()', 'const web = new Website()', 'if(success)', '.then()', 'import AI', 'export default'];
            
            // Create initial particles
            for (let i = 0; i < 20; i++) {
                createCodeParticle();
            }
            
            // Create new particles at intervals
            setInterval(createCodeParticle, 1000);
            
            function createCodeParticle() {
                const particle = document.createElement('span');
                particle.className = 'particle';
                particle.textContent = codeSnippets[Math.floor(Math.random() * codeSnippets.length)];
                
                // Random positions and movements
                const left = Math.random() * 100;
                const top = Math.random() * 100;
                const tx = (Math.random() * 200) - 100;
                const ty = (Math.random() * 200) - 100;
                const tr = Math.random() * 720 - 360;
                
                particle.style.left = `${left}%`;
                particle.style.top = `${top}%`;
                particle.style.setProperty('--tx', `${tx}px`);
                particle.style.setProperty('--ty', `${ty}px`);
                particle.style.setProperty('--tr', `${tr}deg`);
                
                // Animation duration varies
                const duration = 5 + Math.random() * 15;
                particle.style.animationDuration = `${duration}s`;
                
                codeParticles.appendChild(particle);
                
                // Remove particle after animation completes
                setTimeout(() => {
                    particle.remove();
                }, duration * 1000);
            }
            
            // Floating elements in the features section
            const floatingElements = document.getElementById('floatingElements');
            for (let i = 0; i < 8; i++) {
                createFloatingElement();
            }
            
            function createFloatingElement() {
                const element = document.createElement('div');
                element.className = 'floating-element';
                
                // Random positions and sizes
                const size = 30 + Math.random() * 60;
                const left = Math.random() * 100;
                const top = Math.random() * 100;
                const tx = (Math.random() * 100) - 50;
                const ty = (Math.random() * 100) - 50;
                const tr = Math.random() * 360;
                
                element.style.width = `${size}px`;
                element.style.height = `${size}px`;
                element.style.left = `${left}%`;
                element.style.top = `${top}%`;
                element.style.setProperty('--tx', `${tx}px`);
                element.style.setProperty('--ty', `${ty}px`);
                element.style.setProperty('--tr', `${tr}deg`);
                
                // Animation duration
                const duration = 8 + Math.random() * 7;
                element.style.animationDuration = `${duration}s`;
                element.style.animationDelay = `${Math.random() * 5}s`;
                
                floatingElements.appendChild(element);
            }
        });
    </script>
